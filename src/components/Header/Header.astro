---
import { Image } from "@astrojs/image/components";
import PrimaryBtn from "@components/buttons/PrimaryBtn";
import SecondaryBtn from "@components/buttons/SecondaryBtn";

// Import components
import NavMenu from "./NavMenu";
const links = [
  { linkText: "Home", link: "/" },
  { linkText: "About", link: "/about" },
  { linkText: "Clients", link: "/clients" },
  { linkText: "Services", link: "/services" },
  { linkText: "Contact", link: "/contact" },
];

interface Props {
  className?: string;
}
const { className } = Astro.props;
---

<header class={(className ? className : "") + " px-edge py-10 relative"}>
  <div class="max-w-screen-xl mx-auto py-4 flex justify-between xl:block">
    <div class="flex items-center justify-between">
      <a href="/">
        <Image
          src={import("@img/natural-state-wealth-advisors-logo.png")}
          alt="hundred million logo"
        />
      </a>

      <div class="hidden xl:block space-x-7">
        <PrimaryBtn className="w-[200px] text-center">Client Portal</PrimaryBtn>
        <SecondaryBtn className="w-[200px] text-center"
          >Pay My Bill</SecondaryBtn
        >
      </div>
    </div>

    <NavMenu links={links} client:load />
  </div>
</header>
