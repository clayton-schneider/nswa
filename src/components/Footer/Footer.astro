---
const companyLinks = [
  { link: "/about", text: "About" },
  { link: "/clients", text: "Clients" },
  { link: "/services", text: "Services" },
  { link: "/contact", text: "Contact" },
];

const services = [
  "Personal Returns",
  "Tax Projections & Managing Estimates",
  "Partnership & Corporations",
  "Reporting",
  "Trust Returns",
  "Financials Advising",
];

const contacts = [
  {
    icon: "ph:house-simple",
    text: "1129, Northwest J Street, Bentonville, Arkansas 72712, United States",
  },
  {
    icon: "ic:outline-email",
    text: "marisa@nswadvisors.com",
  },
  {
    icon: "charm:phone",
    text: "479-348-8124",
  },
];
const socialLinks = [
  { name: "mdi:facebook", link: "/" },
  { name: "mdi:twitter", link: "/" },
  { name: "mdi:youtube", link: "/" },
];

const today = new Date();

import { Image } from "astro:assets";
import { Icon } from "astro-icon";
---

<section class="bg-black px-edge text-text-light">
  <footer class="py-12">
    <div
      class="max-w-screen-2xl mx-auto flex flex-col lg:flex-row items-center lg:items-start justify-between gap-10 text-center lg:text-left"
    >
      <div class="max-w-lg">
        <Image
          class="mx-auto lg:mx-0"
          src={import("@img/natural-state-wealth-advisors-logo.png")}
          alt="natural state wealth advisors logo"
          width={200}
        />
        <p class="mt-5 leading-loose font-rubik">
          Our business is dedicated to providing professional guidance and
          personalized recommendations to help individuals manage their
          financial affairs and pursue their financial goals.
        </p>
      </div>

      <div>
        <p class="font-bold text-xl">Company</p>
        <ul class="mt-5 flex flex-col space-y-3">
          {
            companyLinks.map((link) => (
              <li>
                <a href={link.link}>{link.text}</a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="max-w-xs">
        <div>
          <p class="font-bold text-xl">Holiday Hours</p>
          <div class="mt-5 space-y-1 text-rose-300">
            <p>We will be closed for Thanksgiving Nov. 22nd - 24th</p>
            <p>Closed for Christmas Dec. 25th - Dec. 26th</p>
            <p>Closed for New Years on Jan. 1st</p>
          </div>
        </div>
        <div class="mt-5">
          <p class="font-bold text-xl">Normal Hours</p>
          <div class="mt-5 space-y-1">
            <p>Monday - Thursday 8:30am - 5:00pm</p>
            <p>Friday 8:30am - 12:00pm</p>
          </div>
        </div>
      </div>
      <div>
        <p class="font-bold text-xl">Contact Us</p>
        <ul class="mt-5 flex flex-col items-center lg:block space-y-5">
          {
            contacts.map((contact) => (
              <li class="flex items-start space-x-5">
                <Icon name={contact.icon} size={26} />
                <p class="max-w-[280px]">{contact.text}</p>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </footer>
  <div>
    <div class="py-5">
      <div class="max-w-screen-xl mx-auto pt-5 border-t border-white">
        <p class="text-sm text-text-light/80 text-center">
          Investment advice offered through Private Advisor Group, a Registered
          Investment Advisor. Private Advisor Group is a separate entity from
          (DBA name). The investment advisor representatives of Private Advisor
          Group offer investment advice in every state, the District of
          Columbia, Puerto Rico and the US Virgin Islands.
        </p>
      </div>
    </div>
    <div class="max-w-screen-xl mx-auto py-5 border-t border-white">
      <p class="text-center">
        Copyright Â© {today.getFullYear()} Natural State Wealth Advisors | All
        Right Reserved | Powered By <a href="https://www.simply-sprout.com"
          >Simply Sprout</a
        >
      </p>
    </div>
  </div>
</section>
