---
import { Image } from "@astrojs/image/components";
import { Icon } from "astro-icon";
const taxServices = [
  {
    icon: "mdi:phone-plus-outline",
    title: "Financial Advising",
    text: "Expert guidance and personalized recommendations to help you manage your finances and achieve your financial goals.",
  },
];
---

<section class="py-20 px-edge overflow-x-hidden relative">
  <p class="absolute select-none -top-10 font-bold text-bg text-text-green/10">
    Services
  </p>

  <div class="max-w-screen-xl mx-auto relative z-10">
    <div class="text-center">
      <h2 class="font-bold text-4xl">Tax Services</h2>
      <p
        class="mt-3 max-w-xl mx-auto font-rubik text-lg text-text-green leading-loose"
      >
        Our services to help you navigate managing your taxes.
      </p>
    </div>

    <div
      class="mt-12 flex flex-col lg:flex-row items-center justify-start lg:items-start gap-10 lg:gap-20"
    >
      <Image
        format="webp"
        src={import("@img/tax-services.jpg")}
        alt="natural state wealth advisors tax services"
      />
      <div class="flex flex-col justify-between">
        {
          taxServices.map((service) => (
            <div class="flex gap-8">
              <Icon
                name={service.icon}
                size={40}
                class="text-text-green grow shrink-0"
              />
              <div class="mt-2 w-full">
                <p class="font-bold text-xl">{service.title}</p>
                <p class="mt-2 font-rubik leading-loose text-text-dark">
                  {service.text}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
