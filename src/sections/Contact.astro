---
import PrimaryBtn from "@components/buttons/PrimaryBtn";

const fields = [
  { fieldType: "text", id: "first", name: "First Name" },
  { fieldType: "text", id: "last", name: "Last Name" },
  { fieldType: "email", id: "email", name: "Email Address" },
  { fieldType: "tel", id: "phone", name: "Phone Number" },
  { fieldType: "textarea", id: "message", name: "Message" },
];
---

<section class="bg-[#F8F8F8] py-36 px-edge relative">
  <p class="absolute -top-28 font-bold text-bg text-text-green/10">Contact</p>
  <div class="max-w-screen-xl mx-auto relative z-10">
    <div class="grid grid-cols-2">
      <div class="w-full h-full">
        <iframe
          class="w-full h-full"
          src="https://maps.google.com/maps?q=1129,%20Northwest%20J%20Street,%20Bentonville,%20Arkansas%2072712,%20United%20States&t=&z=13&ie=UTF8&iwloc=&output=embed"
          frameborder="0"
          scrolling="no"
          marginheight="0"
          marginwidth="0"></iframe>
      </div>
      <div class="bg-white py-14 px-10">
        <h3 class="font-bold text-xl text-center">Start A Conversation</h3>
        <form
          data-static-form-name="contact"
          class="mt-10 grow w-full my-5 grid grid-cols-1 lg:grid-cols-2 gap-4"
        >
          {
            fields.map((field) => (
              <div
                class={
                  (field.fieldType === "textarea"
                    ? "col-span-2"
                    : "col-span-2 lg:col-span-1") + " relative"
                }
              >
                <label for={field.id} class="font-rubik text-[#6D6D6D]">
                  {field.name}
                </label>
                {field.fieldType === "textarea" ? (
                  <textarea
                    id={field.name}
                    class="w-full bg-transparent focus:outline-none resize-none border-gray-300 border p-2 h-[150px]"
                    placeholder={field.name}
                  />
                ) : (
                  <input
                    type={
                      field.fieldType as astroHTML.JSX.HTMLInputTypeAttribute
                    }
                    name={field.name}
                    id={field.id}
                    class="w-full bg-transparent focus:outline-none border-gray-300 border p-2"
                    placeholder={field.name}
                  />
                )}
              </div>
            ))
          }

          <PrimaryBtn type="submit" className="col-span-full  text-center"
            >Submit</PrimaryBtn
          >
        </form>
      </div>
    </div>
  </div>
</section>
