---
import ContactForm from "@components/forms/ContactForm";
import PrimaryBtn from "@components/buttons/PrimaryBtn";

const fields = [
  { fieldType: "text", id: "first", name: "First Name" },
  { fieldType: "text", id: "last", name: "Last Name" },
  { fieldType: "email", id: "email", name: "Email Address" },
  { fieldType: "tel", id: "phone", name: "Phone Number" },
  { fieldType: "textarea", id: "message", name: "Message" },
];
---

<section class="bg-[#F8F8F8] py-16 lg:py-36 px-edge relative overflow-x-hidden">
  <p class="absolute -top-28 font-bold text-bg text-text-green/10">Contact</p>
  <div class="max-w-screen-xl mx-auto relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2">
      <div class="w-full h-full">
        <iframe
          class="w-full h-full min-h-[400px]"
          src="https://maps.google.com/maps?q=1129,%20Northwest%20J%20Street,%20Bentonville,%20Arkansas%2072712,%20United%20States&t=&z=13&ie=UTF8&iwloc=&output=embed"
        ></iframe>
      </div>
      <div class="bg-white py-14 px-10">
        <h3 class="font-bold text-xl text-center">Start A Conversation</h3>
        <ContactForm
          fields={fields}
          name="Contact Form"
          message="Thank you for submitting this contact form. We will reach out to you shortly."
          error="There was an error submitting this form. Please refresh and try again. If the problem persists, please send us an email directly."
          client:load
        />
      </div>
    </div>
  </div>
</section>
