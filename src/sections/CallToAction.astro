---
import { Image } from "@astrojs/image/components";
import PrimaryBtn from "@components/buttons/PrimaryBtn";
---

<section class="px-edge py-32 relative">
  <Image
    src={import("@img/testimonial-background.jpg")}
    alt="client testimonial"
    class="absolute inset-0 h-full"
    quality={100}
  />
  <div
    class="max-w-screen-xl mx-auto relative z-10 flex flex-col lg:flex-row justify-between items-center gap-10"
  >
    <div class="max-w-3xl text-text-light text-center lg:text-left">
      <h2 class="font-bold text-3xl lg:text-5xl">
        See how NSWA can help you with your tax return
      </h2>
      <p class="mt-3 font-rubik text-xl leading-relaxed">
        This is just placeholder text. Don't be alarmed, this is just here to
        fill up space.
      </p>
    </div>
    <PrimaryBtn>Book An Appointment</PrimaryBtn>
  </div>
</section>
