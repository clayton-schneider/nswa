---
import { Image } from "@astrojs/image/components";

const benefits = [
  {
    title: "Expertise and Experience",
    text: "Our in-depth knowledge of tax planning and investment strategies provides valuable guidance and recommendations based on your specific financial situation and goals.",
    img: {
      src: import("@img/benefit-one.jpg"),
      alt: "expertise and experience",
    },
  },
  {
    title: "Customized Advice",
    text: "We help create a personalized plan that takes into account your unique circumstances, including your income, assets, debts, risk tolerance, and long-term financial goals while looking through the lens of tax efficiency.",
    img: {
      src: import("@img/benefit-two.jpg"),
      alt: "customized advice",
    },
  },
  {
    title: "Professional Support",
    text: "Our advisors can also help you navigate complex tax and financial situations and provide ongoing support as your tax and financial needs and circumstances change over time.",
    img: {
      src: import("@img/benefit-three.jpg"),
      alt: "professional support",
    },
  },
];
---

<section class="py-20 px-edge relative overflow-x-hidden">
  <Image
    src={import("@img/benefits-bg.jpg")}
    alt="benefits background"
    class="absolute inset-0 w-full h-full object-cover z-0"
  />
  <div class="max-w-screen-xl mx-auto relative z-10">
    <div class="text-center space-y-2">
      <h2 class="font-bold text-4xl lg:text-5xl">
        What To Expect From Working With Our Advisors
      </h2>
      <p class="max-w-2xl mx-auto font-rubik text-lg text-text-dark">
        At Natural State Wealth Advisors we strive to offer the best tax and
        wealth advising services.
      </p>
    </div>

    <div
      class="mt-16 flex flex-col lg:flex-row items-center lg:items-start justify-between gap-10"
    >
      {
        benefits.map((benefit) => (
          <div class="max-w-[375px]">
            <Image format="webp" src={benefit.img.src} alt={benefit.img.alt} />
            <div class="text-center p-4">
              <p class="font-bold text-xl">{benefit.title}</p>
              <p class="font-rubik text-text-dark leading-loose">
                {benefit.text}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
