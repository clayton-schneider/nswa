---
import { Image } from "@astrojs/image/components";
import { Icon } from "astro-icon";
const values = [
  {
    icon: "client-service",
    title: "Excellent Client Service",
    text: "We believe that providing excellent service to our clients is essential. We are always striving to go above and beyond, and foster a relationship that leaves a lasting impression. We are attentive and responsive to our clients.",
  },
  {
    icon: "golden-rule",
    title: "Golden Rule",
    text: "We believe in treating our clients how we would want to be treated if we were sitting on their side of the table. This not only means in our actions and speech, but also in our advice. We would never recommend or suggest something to our clients that we ourselves would not do.",
  },
  {
    icon: "learn",
    title: "Striving to Learn",
    text: "The tax code and financial laws are always changing. At Natural State Wealth Advisors we stay up to date. We attend seminars throughout the year, and subscribe to podcasts and newsletters on the topics our clients deal with. Our goal is to provide expertise and excellence not just today, but in the future as well.",
  },
];
---

<section class="py-36 px-edge relative">
  <Image
    src={import("@img/benefits-bg.jpg")}
    alt="natural state wealth advisors' values"
    class="absolute inset-0 w-full h-full object-cover"
  />
  <div class="max-w-screen-xl mx-auto relative z-10">
    <div class="text-center">
      <p class="font-rubik uppercase text-lg text-text-green">Our Values</p>
      <h2 class="font-bold text-4xl">Describe What Your Brand Stands For</h2>
      <p
        class="mt-3 max-w-xl mx-auto font-rubik text-lg text-text-green leading-loose"
      >
        This is just placeholder text. Don't be alarmed, this is just here to
        fill up space since your finalized copy isn't ready yet.
      </p>
    </div>

    <div class="mt-20 flex justify-center gap-20">
      {
        values.map((value) => (
          <div class="text-center max-w-[325px]">
            <Icon name={value.icon} size={75} class="mx-auto" />
            <p class="mt-4 font-bold text-lg">{value.title}</p>
            <p class="mt-2 font-rubik leading-loose text-text-dark">
              {value.text}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
