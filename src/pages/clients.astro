---
import ClientsSection from "@sections/ClientsSection.astro";
import Layout from "src/layouts/Layout.astro";
import Hero from "@sections/Hero.astro";
import Workflow from "@sections/Workflow.astro";

import { Image } from "astro:assets";
import heroImg from "@img/clients-hero-banner.jpg";
---

<Layout
  seo={{
    metaTitle: "Client Process | Natural State Wealth Advisors",
    metaDescription:
      "Natural State Wealth Advisors offers a customer centric approach to financial advising.",
  }}
>
  <Hero img={heroImg} title="Clients">
    <div
      class="py-20 max-w-screen-xl mx-auto flex flex-col lg:flex-row items-center lg:items-start justify-between gap-10"
    >
      <div class="max-w-md text-center lg:text-left">
        <h1 class="font-bold text-5xl lg:text-7xl text-text-light">
          Client Experience
        </h1>
        <p class="mt-7 font-rubik font-semibold text-xl text-text-off-white">
          Our goal is to always put our clients first.
        </p>
      </div>
      <Image
        quality={100}
        format="webp"
        src={import("@img/clients-hero.jpg")}
        alt="client experience"
      />
    </div>
  </Hero>
  <Workflow />
  <ClientsSection />
</Layout>
