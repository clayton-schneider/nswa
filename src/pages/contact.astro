---
import Layout from "src/layouts/Layout.astro";
import Hero from "@sections/Hero.astro";
import Contact from "@sections/Contact.astro";

import heroImg from "@img/contact-hero-banner.jpg";
import { Image } from "@astrojs/image/components";
import { Icon } from "astro-icon";

const contacts = [
  {
    icon: "mdi:address-marker",
    text: "1129, Northwest J Street, Bentonville, Arkansas 72712, United States",
  },
  {
    icon: "ic:outline-email",
    text: "hello@example.mail",
  },
  {
    icon: "charm:phone",
    text: "479-273-2539",
  },
];
---

<Layout title="Contact Us | Natural State Wealth Advisors">
  <Hero img={heroImg} title="Contact">
    <div
      class="py-20 max-w-screen-xl mx-auto flex flex-col lg:flex-row items-center lg:items-start justify-between gap-10"
    >
      <div class="max-w-md">
        <h1 class="font-bold text-7xl text-text-light text-center lg:text-left">
          Contact
        </h1>
        <ul class="mt-5 space-y-5">
          {
            contacts.map((contact) => (
              <li class="flex items-start space-x-5">
                <Icon name={contact.icon} size={26} color="white" />
                <p class="max-w-[280px] font-rubik font-semibold text-xl text-text-light">
                  {contact.text}
                </p>
              </li>
            ))
          }
        </ul>
      </div>
      <Image
        src={import("@img/contact-hero.jpg")}
        alt="Natural State Wealth Advisors Client Experience"
      />
    </div>
  </Hero>
  <Contact />
</Layout>
