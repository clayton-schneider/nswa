---
import Layout from "../layouts/Layout.astro";
import Hero from "@sections/Hero.astro";
import Testimonial from "@sections/Testimonial.astro";
import OurServices from "@sections/OurServices.astro";
import Benefits from "@sections/Benefits.astro";
import PrimaryBtn from "@components/buttons/PrimaryBtn";

import heroImg from "@img/home-hero.jpg";

const testimonial = {
  text: "I recently started working with the financial advisors at NSWA and I have been extremely impressed with the level of service and expertise they have provided. They took the time to understand my financial situation and goals, and they developed a customized plan that helped me make progress toward my financial goals. Their ongoing support and guidance have been invaluable, and I feel much more confident about my financial future. I highly recommend NSWA to anyone in need of financial advising services.",
  name: "John Smith",
  title: "CEO, Example Org",
};
---

<Layout
  seo={{
    metaTitle: "Natural State Wealth Advisors",
    metaDescription:
      "Natural State Wealth Advisors offers tax and financial advising to help you achieve your financial goals.",
  }}
>
  <Hero img={heroImg} title="Wealth">
    <div
      class="max-w-[1000px] py-16 lg:py-32 mx-auto text-white text-center relative z-10"
    >
      <h1 class="font-bold text-5xl lg:text-6xl">
        A holistic and strategic approach to managing your tax and financial
        affairs
      </h1>
      <p class="mt-7 font-rubik font-semibold text-xl text-text-off-white">
        Empowering you to reach your financial goals.
      </p>
      <PrimaryBtn to="/contact" className="mt-10"
        >Book An Appointment</PrimaryBtn
      >
    </div>
  </Hero>
  <Benefits />
  <OurServices />
  <Testimonial testimonial={testimonial} />
</Layout>
