---
import Layout from "../layouts/Layout.astro";
import Hero from "@sections/Hero.astro";
import Testimonial from "@sections/Testimonial.astro";
import OurServices from "@sections/OurServices.astro";
import Benefits from "@sections/Benefits.astro";
import PrimaryBtn from "@components/buttons/PrimaryBtn";

import heroImg from "@img/home-hero.jpg";

const testimonial = {
  text: "Working with Conor and his team has been an absolutely amazing experience. They have done an awesome job of balancing their own advice, while also leaving the final decisions in my court. They know what questions to ask to ensure that Iâ€™m being as tax-efficient as possible. I would highly recommend this team, whether your tax return is simple or complex.",
  name: "Alex D.",
  title: "Executive",
};
---

<Layout
  seo={{
    metaTitle: "Natural State Wealth Advisors",
    metaDescription:
      "Natural State Wealth Advisors offers tax and financial advising to help you achieve your financial goals.",
